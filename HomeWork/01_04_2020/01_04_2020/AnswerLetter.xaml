<Window x:Class="_01_04_2020.AnswerLetter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_04_2020"
        mc:Ignorable="d"
        Title="AnswerLetter" Height="450" Width="800" Background="#FF303030">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="371*"/>
            <RowDefinition Height="48*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="Letter" FontSize="12" FontFamily="Comic Sans MS" FontWeight="Bold" Margin="2" Background="#FF959595" Grid.RowSpan="2"/>
        <Button Grid.Row="1" Content="Answer this letter" FontSize="20" FontFamily="Comic Sans MS" FontWeight="Bold" Margin="2" Background="#FF669E75" Click="Button_Click"/>
    </Grid>
</Window>
